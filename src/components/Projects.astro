    ---
import { Button } from "@/components/ui/button"
import { Badge } from "@/components/ui/badge"
import { buttonVariants } from "@/components/ui/button"


const projects = [
  {
    title: "name place animal thing",
    description:  "Game based on the classic name place animal thing game",
    imgUrl:"/images/projects/name-place.png",
    tools: ["HTML", "CSS","React","TypeScript","Firebase","Tailwind"],
    sourceCodeUrl:"https://github.com/FaizanAsifB/name-place-animal-game.git",
    url:"https://geega-game.netlify.app/"
  
  },
    {
      title: "budget app",
      description:  "Personal budget app",
      imgUrl:"/images/projects/budget.png",
     tools: ["HTML", "CSS","JavaScript"],
      sourceCodeUrl:"https://github.com/FaizanAsifB/forkify-course-app.git",
      url:"https://geega-budget.netlify.app/"
    
    },
  {
    title: "forkify",
    description:  "Recipe searching webapp",
    imgUrl:"/images/projects/forkify.png",
   tools: ["HTML", "CSS","JavaScript"],
    sourceCodeUrl:"https://github.com/FaizanAsifB/forkify-course-app.git",
    url:"https://geega-forkify.netlify.app/"
  
  },
{
  title: "weather app",
  description:  "An app that shows the weather",
  imgUrl:"/images/projects/weather.png",
 tools: ["HTML", "CSS","JavaScript"],
  sourceCodeUrl:"https://github.com/FaizanAsifB/weather-app.git",
  url:"https://geega-weather.netlify.app/"
},
{
  title: "space tourism website",
  description:  "A website for a space tourism company",
  imgUrl:"/images/projects/space.png",
 tools: ["HTML", "CSS","JavaScript"],
  sourceCodeUrl:"https://github.com/FaizanAsifB/frontend-mentor-space-tourism.git",
  url:"https://geega-space-tourism.netlify.app/"

},
]
    ---
    
    <section class="" id="projects">
      <div class="container space-y-16">
        <h2>Projects</h2>
        <ul class="space-y-24">
          {projects.map(project => (
            <li class="flex even:flex-row-reverse rounded-lg gap-16">
              <a href={project.url} target="_blank" class="w-[45%] h-[300px]">
                <img
                src={project.imgUrl}
                alt={`preview image of ${project.title}`}
                class="object-cover  h-full w-full rounded-lg"
                />
              </a>
              <div class="flex-1 space-y-6 flex flex-col justify-center">
                <h3 class="capitalize">{project.title}</h3>
                <p >Lorem ipsum dolor sit amet consectetur adipisicing elit. Et voluptate expedita cum. Incidunt minus totam id nihil quisquam est iste omnis ipsum error, reiciendis reprehenderit velit deleniti, voluptate, modi dolore.</p>
                <div class="space-x-2">{project.tools.map(tool => <Badge>{tool}</Badge>)}</div>
                <div>
                    <a href={project.url} target="_blank" class={buttonVariants({ variant: "link" })} >View It Here <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-external-link"><path d="M15 3h6v6"/><path d="M10 14 21 3"/><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/></svg></a>
                  
                    <a href={project.sourceCodeUrl} target="_blank" class={buttonVariants({ variant: "default" })}>Source Code</a>
                  </div>
                </div>
            </li>
          ))}
        </ul>
      </div>
    </section>
