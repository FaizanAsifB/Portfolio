---
import { buttonVariants } from '@/components/ui/button.tsx'
import ScrollArrow from '@/components/ui/ScrollArrow.astro'
import Socials from '@/components/Socials.astro'
import Typewriter from 'typewriter-effect'
import Lottie from 'react-lottie-player/dist/LottiePlayerLight'
---

<section id='hero'>
  <!-- dark:bg-grid-white/[0.03] bg-grid-black/[0.03] -->
  <div
    class='container relative flex min-h-screen flex-col items-center justify-center gap-12 lg:flex-row-reverse lg:justify-end lg:gap-24'
  >
    <!-- <div
      class="absolute pointer-events-none inset-0 flex items-center justify-center bg-background [mask-image:radial-gradient(ellipse_at_center,transparent_20%,black)]"
    </div>
    > -->

    <!-- <div class='w-[200px] lg:w-[320px]'>
      <img
        src='https://plus.unsplash.com/premium_photo-1706896001583-08b5ba33e3be?q=80&w=2676&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D'
        alt='Faizan Asif'
      />
    </div> -->

    <div class='w-[500px] dark:backdrop-invert'>
      <Lottie
        client:load
        play
        loop
        path='/images/programmer-animation.json'
        style={{
          marginInline: 'auto'
        }}
      />
    </div>
    <article>
      <h1 class='text-5xl font-bold tracking-tight lg:text-6xl'>
        Hello, I'm <br />
        <span class='inline-block pt-2 text-primary'>Faizan Asif</span>
      </h1>
      <div class='mt-4 text-2xl text-[#53b6f3]' aria-hidden='true'>
        <Typewriter
          client:load
          options={{
            strings: [
              'Frontend Developer',
              'Programming enthusiast',
              'Gamer',
              'Father',
              'Culinary Adventurer'
            ],
            autoStart: true,
            loop: true
          }}
        />
      </div>
      <!-- <p class="text-muted-foreground">Frontend Web Developer | Stockholm</p> -->
      <p class='max-w-[65ch]'>
        Dedicated to building responsive and streamlined websites and web
        applications that enhance overall user experience
        and&nbsp;functionality.
      </p>
      <Socials />

      <a
        href='#contact'
        class={buttonVariants({ variant: 'default' }) + ' mt-2'}
      >
        <svg
          xmlns='http://www.w3.org/2000/svg'
          width='20'
          height='20'
          viewBox='0 0 24 24'
          fill='none'
          stroke='currentColor'
          stroke-width='2'
          stroke-linecap='round'
          stroke-linejoin='round'
          class='lucide lucide-mail'
          ><rect width='20' height='16' x='2' y='4' rx='2'></rect><path
            d='m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7'></path></svg
        >
        Contact Me</a
      >
    </article>

    <ScrollArrow />
  </div>
</section>
