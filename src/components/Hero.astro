---
import { Button, buttonVariants } from "@/components/ui/button.tsx";
import ScrollArrow from "@/components/ui/ScrollArrow.astro";

const socials = [
  {
    title: "github",
    url: "https://github.com/FaizanAsifB",
    icon: "fa-brands fa-github",
  },
  {
    title: "linkedin",
    url: "https://linkedin.com/",
    icon: "fa-brands fa-linkedin",
  },
  {
    title: "email",
    url: "https://email.com/",
    icon: "fa-solid fa-envelope",
  },
  {
    title: "discord",
    url: "https://discord.com/",
    icon: "fa-brands fa-discord",
  },
];
---

<section id="hero" class="bg-[url('/images/bg-img.jpg')] bg-cover bg-no-repeat">
  <!-- dark:bg-grid-white/[0.03] bg-grid-black/[0.03] -->
  <div class="container grid min-h-screen grid-cols-2 items-center relative">
    <!-- <div
      class="absolute pointer-events-none inset-0 flex items-center justify-center bg-background [mask-image:radial-gradient(ellipse_at_center,transparent_20%,black)]"
    </div>
    > -->
    <div class="z-20">
      <h1 class="text-6xl font-bold tracking-tight scroll-m-20 lg:text-5xl">
        Hello, I'm <br />
        <span class="text-primary text-6xl">Faizan Asif</span>
      </h1>
      <p class="text-xl max-w-[55ch]">
        Frontend Web Developer dedicated to building responsive and streamlined
        Websites and Web Applications that enhance overall user experience
        and&nbsp;functionality.
      </p>
      <ul class="flex items-center gap-8 my-8">
        {
          socials.map((social) => (
            <li>
              <a href={social.url}>
                <i
                  class={social.icon + " fa-2xl hover:text-primary"}
                  title={social.title}
                />
              </a>
            </li>
          ))
        }
      </ul>
      <Button>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="lucide lucide-download mr-1"
          ><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path><polyline
            points="7 10 12 15 17 10"></polyline><line
            x1="12"
            x2="12"
            y1="15"
            y2="3"></line></svg
        >
        Download CV</Button
      >
    </div>
    <div class="w-[400px]">
      <img
        src="https://plus.unsplash.com/premium_photo-1706896001583-08b5ba33e3be?q=80&w=2676&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
        alt=""
      />
    </div>
    <ScrollArrow />
  </div>
</section>
