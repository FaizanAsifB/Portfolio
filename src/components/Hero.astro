---
import { Button, buttonVariants } from "@/components/ui/button.tsx";
const socials = [
  {
    title: "github",
    url: "https://github.com/FaizanAsifB",
    icon: "fa-brands fa-github",
  },
  {
    title: "linkedin",
    url: "https://linkedin.com/",
    icon: "fa-brands fa-linkedin",
  },
  {
    title: "email",
    url: "https://email.com/",
    icon: "fa-solid fa-envelope",
  },
  {
    title: "discord",
    url: "https://discord.com/",
    icon: "fa-brands fa-discord",
  },
];
---

<section id="hero">
  <div class="container grid min-h-screen grid-cols-2 items-center">
    <div>
      <h1 class="text-6xl font-bold tracking-tight scroll-m-20 lg:text-5xl">
        Hello, I'm <br />
        <span class="text-primary text-6xl">Faizan Asif</span>
      </h1>
      <p class="text-xl max-w-[55ch]">
        Frontend Web Developer dedicated to building responsive and streamlined
        Websites and Web Applications that enhance overall user experience
        and&nbsp;functionality.
      </p>
      <ul class="flex items-center gap-8 my-8\">
        {
          socials.map((social) => (
            <li>
              <a href={social.url}>
                <i
                  class={social.icon + " fa-2xl hover:fa-bounce"}
                  title={social.title}
                />
              </a>
            </li>
          ))
        }
      </ul>
      <Button>Download CV</Button>
      <Button>Contact Me</Button>
    </div>
    <div class="w-[400px]">
      <img
        src="https://plus.unsplash.com/premium_photo-1706896001583-08b5ba33e3be?q=80&w=2676&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
        alt=""
      />
    </div>
  </div>
</section>
