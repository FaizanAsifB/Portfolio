---
const skills = [
 'HTML5',  
 'CSS',  
 'JavaScript',  
 'React',  
 'Astro',  
 'TypeScript',  
 'Sass',  
 'Tailwind',  
 'Firebase',  
 'SQL',  
 'Git',  
 'Git Hub',
 'VS Code'
]
---
    <section>
      <div class="container">
        <h2>Skills</h2>
        <ul class="grid grid-cols-4 py-16 mx-32 text-center rounded-lg gap-y-8 justify-items-center bg-secondary">
          {skills.map(skill => (
            <li>
              <img
                src={`/images/logos/${skill.toLowerCase()}.svg`}
                alt={`logo of ${skill}`}
                class="h-24"
              />
              {skill}
            </li>
          ))}
        </ul>
      </div>
    </section>

