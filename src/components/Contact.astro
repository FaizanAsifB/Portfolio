---
import ContactForm from '@/components/form/ContactForm.tsx'
import Socials from './Socials.astro'
import { Icon } from 'astro-icon/components'
import SectionAnimation from './animations/section-animation'
---

<section id='contact'>
  <SectionAnimation client:only='react'>
    <div class='container'>
      <h2>Contact Me</h2>
      <div
        class='justify-center divide-y-4 md:flex md:divide-x-4 md:divide-y-0'
      >
        <article class='md:pr-4'>
          <h4>Get in Touch</h4>
          <p class='mb-8 lg:max-w-[45ch]'>
            Reach out today to explore how I can be an asset to your team as a
            dedicated web developer!
          </p>
          <ul class='space-y-2 text-base md:text-lg lg:space-y-3 xl:text-xl'>
            <li class='flex items-center gap-4 text-primary'>
              <Icon name='location' />
              <span class='text-foreground'>Stockholm, Sweden</span>
            </li>
            <li class='flex items-center gap-4 text-primary'>
              <Icon name='phone' />
              <span class='text-foreground'>+46 72 786 10 96</span>
            </li>
          </ul>
          <Socials />
        </article>
        <article class='w-full pt-8 md:max-w-[500px] md:pl-8 md:pt-0'>
          <h4>Message Me</h4>
          <ContactForm client:only='react' />
        </article>
      </div>
    </div>
  </SectionAnimation>
</section>
