---
import { socials } from '@/data/socials'
import { Icon } from 'astro-icon/components'
---

<ul class='my-4 flex items-center gap-8 lg:my-8'>
  {
    socials.map((social) => (
      <li class='group'>
        <a
          href={social.url}
          target='_blank'
          class='inline-block text-4xl text-foreground group-hover:animate-bounce group-hover:text-primary'
        >
          <Icon
            name={social.title.toLowerCase()}
            aria-label={`link to ${social.title}`}
            title={social.title}
          />
        </a>
      </li>
    ))
  }
</ul>
